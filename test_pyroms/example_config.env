# ======================
# PyROMS Project Config
# ======================

# ---- General Setup ----
export PROJECT_NAME="my_ocean_project"    # Name of your modeling project
export YEAR=2024                         # Simulation year (e.g., 2024)
export MONTH=6                           # Simulation month (1-12)
export DOMAIN="global"                   # Domain name (e.g., 'global', 'north_atlantic')
export GRID_NAME="my_grid"               # Grid name used in ROMS

# ---- Directory Paths ----
export BASE_DIR="/Ubuntu/home/yeyifan/pyroms"         # Base directory for project files
export DATA_DIR="$BASE_DIR/data"                      # Directory for input data
export FORCING_DIR="$BASE_DIR/forcing"                # Directory for atmospheric/ocean forcing files
export BDRY_DIR="$BASE_DIR/bdry"                      # Directory for boundary condition files
export CLM_DIR="$BASE_DIR/climatology"                # Directory for climatology files
export IC_DIR="$BASE_DIR/initial"                     # Directory for initial condition files
export OUTPUT_DIR="$BASE_DIR/output"                  # Directory for model outputs

# ---- Python Environment ----
export PYTHON_VERSION="3.10"          # Python version to use (e.g., '3.10')
export NUMPY_VERSION="1.24.0"         # Numpy version required (e.g., '1.24.0')

# ---- ROMS Build/Run Configuration ----
export ROMS_EXE="$BASE_DIR/ROMS/roms.exe"         # Path to ROMS executable
export ROMS_INPUT="$BASE_DIR/ROMS/roms.in"        # Path to ROMS input namelist file
export NPROC=4                                    # Number of processors for parallel run

# ---- NASA/MERRA Access Info ----
export NASA_SERVER_URL="https://data.nasa.gov/merra"    # NASA/MERRA data server URL
export NASA_USERNAME="your_nasa_username"               # NASA/MERRA username
export NASA_PASSWORD="your_nasa_password"               # NASA/MERRA password (consider using a secrets manager)

# ---- Optional Switches ----
export RUN_FORCING=1      # 1=run forcing script, 0=skip
export RUN_BDRY=0         # 1=run boundary script, 0=skip
export RUN_IC=1           # 1=run initial condition script, 0=skip
export RUN_CLM=1          # 1=run climatology script, 0=skip
export RUN_ROMS=0         # 1=run ROMS model, 0=skip

# ---- End of Config ----
# Edit values above as needed for your project.
# All variables are available to shell and Python scripts via 'os.environ'.